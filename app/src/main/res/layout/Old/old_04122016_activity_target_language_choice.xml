<?xml version="1.0" encoding="utf-8"?>

<!--
Author: Jonathan D. Gorman
Date: 04/07/2016

Create a grid 3*3 structure to hold icons in order to be used by the user to select their language
and their target language.
 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityMain_OLD_16102016"
    android:backgroundTint="@color/primary_material_light"
    android:background="@color/primary_material_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/primary_material_light"
        android:background="@color/primary_material_light">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.1"
            android:backgroundTint="@color/primary_material_light"
            android:background="@color/primary_material_light" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Now, let&apos;s choose a language that you want to learn."
                android:id="@+id/choose_language_text" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/primary_material_light"
            android:background="@color/primary_material_light">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/english_language_button"
                android:src="@drawable/englishicon"
                android:backgroundTint="@color/primary_material_light"
                android:clickable="false"
                android:cropToPadding="false"
                android:onClick="getTargetLanguage" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:id="@+id/spanish_language_button"
                android:src="@drawable/spanishicon"
                android:backgroundTint="@color/primary_material_light"
                android:onClick="getTargetLanguage" />





            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:id="@+id/german_language_button"
                android:src="@drawable/germanicon"
                android:onClick="languageNotAvailable"
                android:backgroundTint="@color/primary_material_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/primary_material_light"
            android:onClick="getTargetLanguage"
            android:background="@color/primary_material_light">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/french_language_button"
                android:src="@drawable/frenchicon"
                android:onClick="languageNotAvailable"
                android:backgroundTint="@color/primary_material_light" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:id="@+id/russian_language_button"
                android:src="@drawable/russianicon"
                android:onClick="languageNotAvailable"
                android:backgroundTint="@color/primary_material_light" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:id="@+id/italian_language_button"
                android:src="@drawable/italianicon"
                android:onClick="languageNotAvailable"
                android:backgroundTint="@color/primary_material_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/primary_material_light"
            android:onClick="getTargetLanguage"
            android:background="@color/primary_material_light">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/polish_language_button"
                android:src="@drawable/polishicon"
                android:onClick="languageNotAvailable"
                android:backgroundTint="@color/primary_material_light" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:id="@+id/irish_language_button"
                android:src="@drawable/irishicon"
                android:onClick="languageNotAvailable"
                android:backgroundTint="@color/primary_material_light" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:id="@+id/portugese_language_button"
                android:src="@drawable/portugeseicon"
                android:onClick="languageNotAvailable"
                android:backgroundTint="@color/primary_material_light"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/primary_material_light"
            android:onClick="getTargetLanguage"
            android:background="@color/primary_material_light">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/swedish_language_button"
                android:src="@drawable/swedishicon"
                android:onClick="languageNotAvailable"
                android:backgroundTint="@color/primary_material_light" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:id="@+id/chinese_language_button"
                android:src="@drawable/chineseicon"
                android:onClick="languageNotAvailable"
                android:backgroundTint="@color/primary_material_light" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:id="@+id/japanese_language_button"
                android:src="@drawable/japaneseicon"
                android:onClick="languageNotAvailable"
                android:backgroundTint="@color/primary_material_light" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
